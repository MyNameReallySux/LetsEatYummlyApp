<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="box_white">
        <item name="android:background">@drawable/box_white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="box_shadow">
        <item name="android:background">@drawable/box_shadow</item>
        <item name="android:padding">5dp</item>
        <item name="android:color">#3D3D3D</item>
    </style>

    <style name="box_shadow.input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="box_shadow.input.email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email_hint</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="box_shadow.input.pass">
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/password_hint</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="small_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="small_button.green">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="user_photo">
        <item name="android:src">@drawable/no_pic</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="user_photo.sm_profile">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">135dp</item>
    </style>
</resources>